*, *::before, *::after {
  box-sizing: border-box;
}

@require './fonts.styl'
@require './owl.carousel.css'

html {
  height: 100%;
  font-size: 16px;
}

a{
  text-decoration: none;
}



body {
  margin: 0;
  font-family: 'Avenir Next Regular';
  height: 100%;
}

header,
nav,
section,
article,
aside,
footer {
  display: block;
}

.page{
  max-width 1400px
  margin 0 auto
}

.media{
  background-color: #f9f9f9;
  &__header{
    padding: 100px 150px 40px 150px
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  &__social{
    display: flex;
    align-items: center;
    &-title{
      font-size: 16px;
      color rgba(#333333, 0.27)
      margin-right 15px
    }
    &-links{
      width: 170px;
      display: flex;
      justify-content: space-between;
    }
    &-link{
      width 40px
      height 40px
      background red
    }
  }
  &__photo{
    height 405px
    display: flex;
    position: relative
    &:hover{
      .media__description{
        transition 0.3s
        opacity 1
      }
    }
    img{
      object-fit: cover;
      width: 100%;
      height: 100%;
    }
  }
  &__description{
    position: absolute
    width 100%
    height 405px
    background-color: rgba(13,205,112,0.9);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity 0
    transition 0.3s
    &-text{
      text-align: center;
      font-size: 24px;
      max-width: 285px;
      color: #fff;
      font-family: 'Avenir Next Medium';
    }
  }
}
.title{
  font-size: 44px;
  color #000
  font-family: 'Avenir Next Bold';
}

  @media(max-width: 1400px){
    .media{
      &__header{
        padding: 7.15vw 10.7vw 2.9vw 10.7vw;
      }
      &__social{
        &-link{
          width: 2.9vw;
          height: 2.9vw;
          min-width 20px
          min-height 20px
        }
        &-links{
          width: 13.5vw;
          min-width 100px
        }
      }
    }
    .title{
      font-size: 3.2vw;
    }
  }
    @media (max-width: 400px){
      .media {
        &__header {
          flex-wrap wrap
        }
        &__social{
          margin-top 15px
        }
      }
      .title{
        font-size: 20px;
      }
    }
